@{
    ViewData["Title"] = "Company Page";
}
<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control">
            <i class="fas fa-plus"></i>&nbsp; Add New Company
        </a>
    </div>
</div>
<div class="container rounded border p-2 m-2">
    <table id="tblData" class="table table-bordered">
        <thead class="bg-info">
            <tr>
                <th class="text-light">Name</th>
                <th class="text-light">Address</th>
                <th class="text-light">City</th>
                <th class="text-light">State</th>
                <th class="text-light">State</th>
                <th class="text-light">Is Authorized</th>
                <th class="text-light">Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts  {
    <script src="~/js/Company.js"></script>
}