@model Ecomm2.Models.ViewModels.ShoppingCartVM
@{
    ViewData["Title"] = "Shopping Cart";
}
<div class="container mt-4">

    <div class="card">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-shopping-cart"></i> Shopping Cart</h4>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-info text-light">Continue Shopping</a>
        </div>

        <div class="card-body">
            @foreach (var list in Model.ListCart)
            {
                <div class="row align-items-center">

                    <div class="col-md-3">
                        <img src="@list.Product.ImageURL" class="img-fluid" />
                    </div>

                    <div class="col-md-3">
                        <h5>@list.Product.Title</h5>
                        <p class="text-muted">@Html.Raw(list.Product.Description)</p>
                    </div>

                    <div class="col-md-3 text-center">
                        <p>@list.Price <span>*</span> @list.Count = <strong>@(list.Price * list.Count)</strong></p>
                    </div>

                    <div class="col-md-2 d-flex justify-content-center">
                        <a asp-action="plus" asp-route-id="@list.Id" class="btn btn-outline-success">
                            <i class="fa fa-plus"></i>
                        </a>&nbsp;
                        <a asp-action="minus" asp-route-id="@list.Id" class="btn btn-outline-info">
                            <i class="fa fa-minus"></i>
                        </a>&nbsp;
                        <a asp-action="delete" asp-route-id="@list.Id" class="btn btn-outline-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </div>

                <hr>
            }

            <div class="d-flex justify-content-between align-items-center">
                <span>Total (USD):</span>
                <span class="fw-bold">$ @(Model.OrderHeader.OrderTotal)</span>
            </div>

            <div class="text-end mt-3">
                <a asp-controller="Cart" asp-action="Summary" class="btn btn-success">Summary</a>
            </div>
        </div>
    </div>
</div>
